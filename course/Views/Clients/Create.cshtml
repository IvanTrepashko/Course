
@{
    ViewData["Title"] = "Create";
}
@model IEnumerable<Clothing>
<h1>Выберите вещь, которую хотите заказать</h1>
<br/>
<p>
    <a asp-action="menu">Назад</a>
</p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <a asp-action="create" asp-route-sortState="@ViewBag.CategorySort">Категория</a>
                </th>
                <th>
                    <a asp-action="create" asp-route-sortState="@ViewBag.MaterialSort">Материал</a>
                </th>
                <th>
                    <a asp-action="create" asp-route-sortState="@ViewBag.CostSort">Стоимость</a>
                </th>
                <th>
                    Фото
                </th>
            </tr>
        </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Material)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @if (item.Image != null)
                    {
                        <img style="width:100px;height:100px;" src="data:image/jpeg;base64,@Convert.ToBase64String(item.Image)" />
                    }
                </td>
                <td>
                    <a asp-action="Add" asp-route-id="@item.ClothingId">Добавить</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
