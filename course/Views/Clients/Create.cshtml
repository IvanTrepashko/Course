
@{
    ViewData["Title"] = "Create";
}

@{
    Layout = "_ClientsLayout";
}

@model IEnumerable<Clothing>

<h3 style="text-align:center;">Выберите вещь, которую хотите заказать</h3>
<br/>
    <table class="table table-borderless table-hover"style="border-bottom:none;border-right:none;">
        <thead>
            <tr>
                <th>
                    <a asp-action="create" asp-route-sortState="@ViewBag.CategorySort">Категория</a>
                </th>
                <th>
                    <a asp-action="create" asp-route-sortState="@ViewBag.MaterialSort">Материал</a>
                </th>
                <th>
                    <a asp-action="create" asp-route-sortState="@ViewBag.CostSort">Стоимость</a>
                </th>
                <th>
                    Фото
                </th>
            </tr>
        </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Material)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @if (item.Image != null)
                    {
                        <img style="width:100px;height:100px;" src="data:image/jpeg;base64,@Convert.ToBase64String(item.Image)" />
                    }
                </td>
                <td style="border:none;">
                    <a class="btn btn-primary" asp-action="Add" asp-route-id="@item.ClothingId">Добавить</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
