
@{
    ViewData["Title"] = "Register";
}

@{ 
    Layout = "_MainLayout";
}

<link rel="stylesheet" href="~/css/RegisterForm.css" />



@model course.ViewModels.RegisterViewModel

<body>
    <div class="container">
        <div class="col-md-6 mx-auto text-center">
            <div class="header-title">
                <h1 class="wv-heading--title">
                    Регистрация
                </h1>
                <h2 class="wv-heading--subtitle">
                    Зарегистрируйтесь, чтобы стать клиентом нашего ателье
                </h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mx-auto text-center">
                <br/>
                <br/>
                <div class="myform form ">
                    <form asp-controller="clients" asp-action="register" method="post">
                        <div asp-validation-summary="ModelOnly" />
                        <div class="form-group">
                            <input asp-for="BodyParameters" class="form-control my-input" placeholder="Параметры тела (рост-грудь-талия)">
                        </div>
                        <div class="form-group">
                            <input asp-for="Email" type="email" class="form-control my-input" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <input asp-for="FullName" type="text" class="form-control my-input" placeholder="Ваше имя">
                        </div>
                        <div class="form-group">
                            <input asp-for="PhoneNumber" type="tel" class="form-control my-input" placeholder="Номер телефона (ххх-хх-хх)">
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control my-input" placeholder="Пароль">
                        </div>
                        <div class="form-group">
                            <input asp-for="PasswordConfirm" class="form-control my-input" placeholder="Подтвердите пароль">
                        </div>
                        <div class="text-center ">
                            <input type="submit" class=" btn btn-block send-button tx-tfm" value="Создать аккаунт" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>