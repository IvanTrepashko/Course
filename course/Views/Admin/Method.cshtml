
@{
    ViewData["Title"] = "Method";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model Method

<h3 class="text-center">Статистический метод</h3>

<p>
    Заполните изначальные данные
</p>

<form asp-controller="admin" asp-action="method" method="post">
    <div asp-validation-summary="ModelOnly" />
    <div class="form-group">
        <input asp-for="Efficiency" class="form-control my-input" placeholder="Эффективность вложенных средств">
    </div>
    <div class="form-group">
        <input asp-for="MonthCount" type="number" class="form-control my-input" placeholder="Количество месяцев">
    </div>
    <div class="form-group">
        <input asp-for="OptionsCount" type="number" class="form-control my-input" placeholder="Количество видов одежды">
    </div>
    <div class="text-center ">
        <input type="submit" class=" btn btn-block send-button tx-tfm" value="Ввести данные" />
    </div>
</form>