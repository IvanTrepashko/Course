@model IEnumerable<course.Models.Supplier>

@{
    ViewData["Title"] = "Index";
}

@{ 
    Layout = "_AdminLayout";
}

<p>
    <a class="btn btn-light" asp-action="Create">Добавить поставщика</a>
</p>
<table class="table table-hover table-borderless">
    <thead>
        <tr>
            <th>
                <a asp-action="index" asp-route-sortState="@ViewBag.CountrySort">Страна</a>
            </th>
            <th>
                <a asp-action="index" asp-route-sortState="@ViewBag.NameSort">Название</a>
            </th>
            <th>
                <a asp-action="index" asp-route-sortState="@ViewBag.CostSort">Стоимость за партию</a>
            </th>
            <th>
                <a asp-action="index" asp-route-sortState="@ViewBag.PhoneSort">Номер телефона</a>
            </th>
            <th>
                <a asp-action="index" asp-route-sortState="@ViewBag.MaterialSort">Материал</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.SupplierId">Редактировать</a>
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.SupplierId">Детали</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.SupplierId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
