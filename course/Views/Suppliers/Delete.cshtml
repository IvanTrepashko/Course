@model course.Models.Supplier

@{
    ViewData["Title"] = "Delete";
}

@{ 
    Layout = "_AdminLayout";
}
<h3>Вы действительно хотите удалить данного поставщика?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Страна
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dt class = "col-sm-2">
            Название
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Стоимость за партию
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt class = "col-sm-2">
            Номер телефона 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            Номер телефона
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Material)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SupplierId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="Index">Назад</a>
    </form>
</div>
