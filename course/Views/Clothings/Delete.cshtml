@model course.Models.Clothing

@{
    ViewData["Title"] = "Delete";
}

@{ 
    Layout = "_AdminLayout";
}

<h3>Вы действительно хотите удалить данную вещь:</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Категория
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class = "col-sm-2">
            Стоимость
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt class = "col-sm-2">
            Материал
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Material)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ClothingId" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="index" class="btn btn-primary">Назад</a>
    </form>
</div>
