@model IEnumerable<course.Models.Clothing>

@{
    ViewData["Title"] = "Управление вещами";
}

@{ 
    Layout = "_AdminLayout";
}
<p>
    <a class="btn btn-secondary" asp-action="Create">Добавить модель</a>
</p>
<div class="text-center">
    
<table class="table table-borderless table-hover" style="border-bottom:none;border-right:none;">
    <thead>
        <tr>
            <th>
                <a asp-action="index" asp-route-sortState="@ViewBag.CategorySort">Категория</a>
            </th>
            <th>
                <a asp-action="index" asp-route-sortState="@ViewBag.MaterialSort">Материал</a>
            </th>
            <th>
                <a asp-action="index" asp-route-sortState="@ViewBag.CostSort">Стоимость</a>
            </th>
            <th>
                Фото
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @if(item.Image!=null)
                {
                    <img style="width:100px;height:100px;" src="data:image/jpeg;base64,@Convert.ToBase64String(item.Image)"/>
                }
            </td>
            <td style="border:none;">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ClothingId">Редактировать</a> 
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.ClothingId">Детали</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ClothingId">Удалить</a>
            </td>
        </tr>
        }
    </tbody>
</table>
</div>