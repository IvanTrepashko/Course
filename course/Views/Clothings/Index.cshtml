@model IEnumerable<course.Models.Clothing>

@{
    ViewData["Title"] = "Управление вещами";
}

<h1>Управление вещами</h1>

<p>
    <a asp-action="Create">Добавить вещь</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="index" asp-route-sortState="@ViewBag.CategorySort">Категория</a>
            </th>
            <th>
                <a asp-action="index" asp-route-sortState="@ViewBag.MaterialSort">Материал</a>
            </th>
            <th>
                <a asp-action="index" asp-route-sortState="@ViewBag.CostSort">Стоимость</a>
            </th>
            <th>
                Фото
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @if(item.Image!=null)
                {
                    <img style="width:100px;height:100px;" src="data:image/jpeg;base64,@Convert.ToBase64String(item.Image)"/>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClothingId">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.ClothingId">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.ClothingId">Удалить</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<br/>
<br/>
