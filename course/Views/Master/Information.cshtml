@model IEnumerable<course.ViewModels.OrderViewModel>
@{
    ViewData["Title"] = "Information";
}

<table class="table">
    <thead>
        <tr>
            <th>
                Категория
            </th>
            <th>
                Материал
            </th>
            <th>
                Стоимость
            </th>
            <th>
                Имя клиента
            </th>
            <th>
                Номер клиента
            </th>
            <th>
                Дата заказа
            </th>
            <th>
                Статус
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @{
                    var localtime = item.OrderingTime.UtcDateTime.ToLocalTime();
                    @Html.DisplayFor(modelItem => localtime);
                }
            </td>
            <td>
                @if (item.isCompleted == 0)
                {
                    <span>Не выполнен</span>
                }
                else
                {
                    <span>Выполнен</span>
                }
            </td>
            <td>
                @if (item.isCompleted == 0)
                {
                    <a asp-action="markcompleted" asp-route-id="@item.OrderId">Отметить как выполненный</a>
                }
            </td>
        </tr>
        }
    </tbody>
</table>
<a asp-action="menu">Назад</a>